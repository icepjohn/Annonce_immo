<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('dependencies/bootstrap/dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('dependencies/bootstrap/dist/css/bootstrap-theme.min.css.css') }}">
        <style>
            #page {
                padding-top: 10px;
            }
            body {
                background-color: #ec971f;
            }
            footer{
                position: fixed;
                bottom : 0;
                left: 0;
                background-color: #ec971f;
                color : #2b542c;
                width: 100%;
            }
        </style>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body class="container-fluid">
{% block nav %}
    {% include 'partials/_nav.html.twig' %}
{% endblock %}
<div class="row" id="page">
    <div class="col-md-10 col-md-offset-1">
        <header>
            {% block header %}{% endblock %}
            <h1>Annonces John.Immo</h1>
        </header>
        <section class="col-md-10">
            {% block body %}{% endblock %}
        </section>
        <aside class="col-md-4">
            {% block aside %}{% endblock %}
        </aside>
    </div>
</div>
<footer>
    {% block footer %}
        copyright : moi
    {% endblock %}
</footer>

{% block javascripts %}
    <script src="{{ asset('dependencies/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('dependencies/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
